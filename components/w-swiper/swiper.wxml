<!--components/w-swiper/swiper.wxml-->
<swiper class="swiper"
        indicator-dots="{{true}}"
        autoplay="{{true}}"
        circular
        interval="{{1000}}"
        indicator-active-color="#ff5777">
  <block wx:for="{{list}}" wx:key="{{index}}">
    <swiper-item class="swiper-item">
      <image src="{{item.image}}" mode="widthFix"></image>
    </swiper-item>
  </block>
</swiper>
